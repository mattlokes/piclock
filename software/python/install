apt-get install libzmq-dev
apt-get install python-dev
apt-get install python-pip
apt-get install autoconf automake libtool
pip install pyzmq
pip install tornado
cd displays/ledDisplay

wget https://github.com/zeromq/czmq/archive/v2.2.0.zip
unzip v2.2.0.zip 
cd czmq-2.2.0/
./autogen.sh 
./configure
make
make check
make install
ldconfig
cd ..

make
cd ../..
